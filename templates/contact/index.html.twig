{% extends 'layout.html.twig' %}

{% block title %}Contact coach
{% endblock %}

{% block body %}
	<h1 class="d-flex justify-content-center mt-5 mb-4">Contacter le coach sportif</h1>
	{{ form_start(form) }}
	<div class="container-sm container-lg shadow bg-light rounded mb-5">
		<div class="row">
		<div class="d-lg-flex justify-content-lg-around">
			<div class="col-lg-5 col-md-12 mt-4 fs-5">
				{{ form_row (form.firstname, {'attr':{'class':'form-control'}})}}
			</div>
			<div class="col-lg-5 col-md-12 mt-4 fs-5">
				{{ form_row (form.lastname, {'attr':{'class':'form-control'}})}}
			</div>
			</div>
			<div class="d-lg-flex justify-content-lg-around">
			<div class="col-lg-5 col-md-12 mt-2 fs-5">
				{{ form_row (form.telephone, {'attr':{'class':'form-control'}})}}
			</div>
			<div class="col-lg-5 col-md-12 mt-2 fs-5">
				{{ form_row (form.email, {'attr':{'class':'form-control'}})}}
			</div>
			</div>
			<div class="d-flex justify-content-center">
			<div class="col-lg-11 col-12 mt-2 fs-5">
				{{ form_row (form.message, {'attr':{'class':'form-control'}})}}
			</div>
			</div>
		</div>
		<div class="d-flex justify-content-center">
			<button class="btn btn-dark text-light mt-2 mb-4 fs-5"><i class="bi bi-send-fill me-2"></i>{{ button_label|default('Envoyer') }}</button>
		</div>
	</div>
	{{ form_end(form) }}
{% endblock %}
