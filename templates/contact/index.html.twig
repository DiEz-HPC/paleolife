{% extends 'base.html.twig' %}

{% block title %}Contact coach
{% endblock %}

{% block body %}
	<h1 class="d-flex justify-content-center mt-5 mb-3">Contacter le coach sportif</h1>
	{{ form_start(form) }}
	<div class="container bg-light mt-auto">
		<div class="row">
			<div class="align-items-center col-lg-6 col-md-12 mt-2">
				{{ form_row (form.firstname, {'attr':{'class':'form-control'}})}}
			</div>
			<div class="align-items-center col-lg-6 col-md-12 mt-2">
				{{ form_row (form.lastname, {'attr':{'class':'form-control'}})}}
			</div>
			<div class="align-items-center col-lg-6 col-md-12 mt-2">
				{{ form_row (form.telephone, {'attr':{'class':'form-control'}})}}
			</div>
			<div class="align-items-center col-lg-6 col-md-12 mt-2">
				{{ form_row (form.email, {'attr':{'class':'form-control'}})}}
			</div>
			<div class="align-items-center col-lg-12 mt-2">
				{{ form_row (form.message, {'attr':{'class':'form-control'}})}}
			</div>
		</div>
		<div class="d-flex justify-content-center mt-2 mb-5">
			<button class="btn border bg-black text-light rounded mb-3"><i class="bi bi-envelope-check-fill me-2"></i>{{ button_label|default('Envoyer') }}</button>
		</div>
	</div>

	{{ form_end(form) }}
{% endblock %}
