{% extends 'base.html.twig' %}

{% block title %}Index des clients
{% endblock %}

{% block body %}
	<main class="container mb-5">
		<h1 class="my-5 text-center">Liste des Clients</h1>
		<h2 class="my-5">Clients validés</h2>
		<table class="table align-middle mb-5">
			<thead class="fs-4">
				<tr>
					<th>Nom</th>
					<th>Email</th>
					<th>Gestion du compte</th>
				</tr>
			</thead>
			<tbody class="fs-5">
				{% for client in clients %}
					<tr>
						<td class="col-lg-4">{{ client.user.name }}</td>
						<td class="col-lg-4">{{ client.user.email }}</td>
						<td class="d-flex">
							<a class="btn btn-info" href="{{ path('app_user_show', {'id': client.id}) }}">
								<i class="bi bi-book-fill me-2"></i>
								Détails
							</a>
							<a class="btn btn-warning mx-3" href="{{ path('app_client_edit', {'id': client.id}) }}">
								<i class="bi bi-pen-fill me-2"></i>
								Modifier
							</a>
							<form method="post" action="{{ path('app_user_delete', {'id': client.id}) }}" onsubmit="return confirm('Êtes-vous certain de supprimer cet utilisateur?');">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
								<button class="btn btn-danger">
									<i class="bi bi-trash-fill me-2"></i>Supprimer</button>
							</form>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Pas de client</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<h2 class="my-5">Clients en attente de validation</h2>
		<table class="table">
			<thead class="fs-4">
				<tr>
					<th>Nom</th>
					<th>Email</th>
					<th>Fin du programme</th>
					<th>Status du compte</th>
					<th>Suppression de l'utilisateur</th>
				</tr>
			</thead>
			<tbody class="fs-5">

				{% for user in users %}
					<tr>
						<td>{{ user.name }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.date|date('d-m-Y') }}</td>
						<td>{{ user.isVerified ? 'Activé' : 'Désactivé' }}</td>
						<td class="d-flex">
							{{ include('user/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Pas de client en attente</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>

	<a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
