{% extends 'base.html.twig' %}

{% block title %}Index des clients
{% endblock %}

{% block body %}
	<main class="container mb-5">
		<h1 class="my-5 text-center">Liste des Clients</h1>
		<h2 class="my-5">Clients validés</h2>
		<table class="table align-middle mb-5">
			<thead class="fs-4">
				<tr>
					<th>Nom</th>
					<th>Email</th>
					<th>Désactivation du compte</th>
					<th>Gestion du compte</th>
				</tr>
			</thead>
			<tbody class="fs-5">
				{% for client in clients %}
					<tr>
						<td class="col-lg-3">{{ client.name }}</td>
						<td class="col-lg-3">{{ client.email }}</td>
						<td><form method="post" action="{{ path('app_user_change', {'id': client.id}) }}" onsubmit="return confirm('Êtes-vous certain de mettre cet utilisateur en attente?');">
						<input type="hidden" name="_token" value="{{ csrf_token('change' ~ client.id) }}">
						<button class="btn bg-black text-light me-3">
								<i class="bi bi-person-dash-fill me-2"></i>
							Désactivation</button>
						</form>
						</td>
						<td class="d-flex">
							<a class="btn btn-warning me-3" href="{{ path('app_client_edit', {'id': client.id}) }}">
								<i class="bi bi-pen-fill me-2"></i>
								Éditer
							</a>
							<form method="post" action="{{ path('app_user_delete', {'id': client.id}) }}" onsubmit="return confirm('Êtes-vous certain de supprimer cet utilisateur?');">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
								<button class="btn btn-danger">
									<i class="bi bi-trash-fill me-2"></i>Supprimer</button>
							</form>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Pas de client</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<h2 class="my-5">Clients en attente de validation</h2>
		<table class="table">
			<thead class="fs-4">
				<tr>
					<th>Nom</th>
					<th>Email</th>
					<th>Activation du compte</th>
					<th>Suppression de l'utilisateur</th>
				</tr>
			</thead>
			<tbody class="fs-5">

				{% for user in users %}
					<tr>
						<td>{{ user.name }}</td>
						<td>{{ user.email }}</td>
						<td><form method="post" action="{{ path('app_user_change', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous certain d'accepter cet utilisateur?');">
						<input type="hidden" name="_token" value="{{ csrf_token('change' ~ user.id) }}">
						<button class="btn btn-success me-3">
								<i class="bi bi-person-plus-fill me-2"></i>
							Activation</button>
						</form>
						</td>
						<td class="d-flex">
							{{ include('user/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Pas de client en attente</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>

	<a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
