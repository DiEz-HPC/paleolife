<div class="row">
	{{ form_start(form) }}
	<div class="shadow p-4 fs-5">
		{{ form_row(form.beforeFile) }}
		{{ form_row(form.dateBefore) }}
		{{ form_row(form.afterFile) }}
		{{ form_row(form.dateAfter) }}
		<div class="d-flex justify-content-xl-start justify-content-around mt-2">
			<button class="btn btn-outline-primary text-dark fs-5">
				<i class="bi bi-plus-circle me-2"></i>
				{{ button_label|default('Modifier') }}</button>
			<a href="{{ path('app_client_index') }}" class="btn btn-outline-secondary text-dark fs-5 d-xl-none">
				<i class="bi bi-box-arrow-left me-2"></i>Retour</a>
		</div>
	</div>
	<div class="d-flex justify-content-center">
	<h1 class="d-flex justify-content-center mt-5 mb-3" id="measure">Mensurations</h1>
	</div>
	<div class="shadow p-md-4 mb-5 p-2">
		<table class="table">
			<thead>
				<tr class="fs-5">
					<th scope="col">Nom</th>
					<th scope="col">Avant</th>
					<th scope="col">Après</th>
					<th scope="col">Unité</th>
				</tr>
			</thead>
			<tbody>
				{% for measurementClientForm in form.measurementClients %}
					<tr class="fs-5">
						<td>{{ measurementClientForm.vars.value.measurement.name }}</td>
						<td>{{ form_row(measurementClientForm.valueBefore) }}</td>
						<td>{{ form_row(measurementClientForm.valueAfter) }}</td>
						<td>{{ measurementClientForm.vars.value.measurement.unity }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="d-flex justify-content-xl-start justify-content-around mt-2">
			<button class="btn btn-outline-primary text-dark fs-5 mb-3 mb-md-0">
				<i class="bi bi-plus-circle me-2"></i>
				{{ button_label|default('Modifier') }}</button>
			<a href="{{ path('app_client_index') }}" class="btn btn-outline-secondary text-dark fs-5 d-xl-none mb-3 mb-md-0">
				<i class="bi bi-box-arrow-left me-2"></i>Retour</a>
		</div>
	</div>
</div>
{{ form_end(form) }}
