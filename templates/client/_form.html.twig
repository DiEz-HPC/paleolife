{{ form_start(form) }}
<div class="container shadow p-4 fs-5">
	{{ form_row(form.beforeFile) }}
	{{ form_row(form.dateBefore) }}
	{{ form_row(form.afterFile) }}
	{{ form_row(form.dateAfter) }}
	{% for measurementClientForm in form.measurementClients %}
	{{ measurementClientForm.vars.value.measurement.name }}
	{{ form_widget(measurementClientForm) }}
	
	{% endfor %}
	
	<div class="d-flex justify-content-between">
		<button class="btn btn-primary fs-5">
			<i class="bi bi-plus-circle me-2"></i>
			{{ button_label|default('Modifier') }}</button>
		<a class="btn btn-dark text-light fs-5" href="{{ path('app_client_index') }}">
			<i class="bi bi-box-arrow-left me-2"></i>
			Retour</a>
	</div>
</div>
{{ form_end(form) }}
