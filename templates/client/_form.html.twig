<div class="row">
	{{ form_start(form) }}
	<div class="container shadow p-4 fs-5 col-11">
		{{ form_row(form.beforeFile) }}
		{{ form_row(form.dateBefore) }}
		{{ form_row(form.afterFile) }}
		{{ form_row(form.dateAfter) }}
		<div class="d-flex justify-content-md-start justify-content-around mt-2">
			<button class="btn btn-primary fs-5">
				<i class="bi bi-plus-circle me-2"></i>
				{{ button_label|default('Modifier') }}</button>
			<a href="{{ path('app_client_index') }}" class="btn btn-dark text-light fs-5 d-md-none">
				<i class="bi bi-box-arrow-left me-2"></i>Retour</a>
		</div>
	</div>
	<div class="d-flex justify-content-center">
	<h1 class="d-flex justify-content-center mt-5 mb-3 title measure" id="measure">Mensurations</h1>
	</div>
	<div class="container shadow p-md-4 mb-5 col-11">
		<table class="table">
			<thead>
				<tr class="fs-4">
					<th scope="col">Nom</th>
					<th scope="col">Avant</th>
					<th scope="col">Apr√®s</th>
				</tr>
			</thead>
			<tbody>
				{% for measurementClientForm in form.measurementClients %}
					<tr class="fs-5">
						<td class="p-2">{{ measurementClientForm.vars.value.measurement.name }}</td>
						<td class="p-2">{{ form_row(measurementClientForm.valueBefore) }}</td>
						<td class="p-2">{{ form_row(measurementClientForm.valueAfter) }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="d-flex justify-content-md-start justify-content-around mt-2 mb-3 mb-md-0">
			<button class="btn btn-primary fs-5">
				<i class="bi bi-plus-circle me-2"></i>
				{{ button_label|default('Modifier') }}</button>
			<a href="{{ path('app_client_index') }}" class="btn btn-dark text-light fs-5 d-md-none">
				<i class="bi bi-box-arrow-left me-2"></i>Retour</a>
		</div>
	</div>
</div>
{{ form_end(form) }}
