{% extends 'layoutClient.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('client') }}
{% endblock %}
{% block title %}
	{{ parent() }}||Mon profil
{% endblock %}

{% block body %}
	<main class="container-fluid">
		<section>
			<div class="row mt-3 justify-content-center position-absolute w-100">
				<div class="d-md-flex justify-content-center align-items-center d-none">
					<div class="photoClient">
						{% if client.photoBefore is empty %}
							<img src="{{ asset('build/images/placeholderClient.jpg') }}" alt="Photo d'avant" class="photo w-100">
						{% else %}
							<img src="{{vich_uploader_asset(client, 'beforeFile')}}" alt="Photo d'avant" class="photo w-100">
						{% endif %}
						<div class="d-flex justify-content-center fs-5">Avant
							{{ client.dateBefore|date("d/m/Y") }}</div>
					</div>
					<div class="photoClient">
						{% if client.photoAfter is empty %}
							<img src="{{ asset('build/images/placeholderClient.jpg') }}" alt="Photo d'après" class="photo w-100">
						{% else %}
							<img src="{{vich_uploader_asset(client, 'afterFile') }}" alt="Photo d'après" class="photo w-100">
						{% endif %}
						<div class="d-flex justify-content-center fs-5">Après
							{{ client.dateAfter|date("d/m/Y") }}</div>
					</div>
				</div>
			</div>
			<div class="bg-black div-dark d-none d-md-block position-relative"></div>
		</section>
		<div class="row mt-md-5 mt-3">
			<div class="col-md-2">
				<nav id="sidebar" class="d-flex flex-column sticky-md-top">
					<h1 class="d-flex justify-content-md-start justify-content-center my-md-3 text-primary ms-2 fw-bold">{{ client.user.name }}</h1>
					<a href="{{ path('client_edit_profil') }}" class="d-flex justify-content-md-start justify-content-center text-dark fs-4 text-decoration-none ms-2">Modifier mon profil<i class="bi bi-pencil-square ms-2"></i>
					</a>
					<div class="d-none d-md-block">
						<a href="#goal" class="fs-4 d-flex justify-content-start text-dark mt-3 text-decoration-none ms-2">Objectifs</a>
						<a href="#measurement" class="fs-4 d-flex justify-content-start text-dark mt-3 text-decoration-none ms-2">Mensurations</a>
						<a href="#session" class="fs-4 d-flex justify-content-start text-dark mt-3 text-decoration-none ms-2">Séances</a>
						<a href="#nutrition" class="fs-4 d-flex justify-content-start text-dark mt-3 text-decoration-none ms-2">Nutrition</a>
					</div>
				</nav>
			</div>
			<div data-bs-spy="scroll" data-bs-target="#sidebar" data-bs-offset="0" data-bs-smooth-scroll="true" class="col-md-8" tabindex="0">
				<div class="bg-light div-light d-none d-lg-block position-relative row"></div>
				<section class="d-flex flex-column align-items-center mb-5 mt-md-0 mt-5">
					<h1 class="d-flex justify-content-center mb-4 title p-2" id="goal">
						<i class="bi bi-speedometer me-2"></i>Objectifs
					</h1>
					<div class="p-3 col-md-4">
						<div class="d-flex">
							<p class="fs-5 objectif me-2 text-secondary">Global:</p>
							<p class="fs-5">{{ client.globalName}}</p>
						</div>
						<div class="d-flex">
							<p class="fs-5 me-2 objectif text-secondary">Mensuel:</p>
							<p class="fs-5">{{ client.monthName}}</p>
						</div>
						<div class="d-flex">
							<p class="fs-5 me-2 objectif text-secondary">Nutrition:</p>
							<p class="fs-5">{{ client.objectiveNutrition}}</p>
						</div>
					</div>
				</section>
				<section class="mb-5">
					<div class="d-flex justify-content-center">
						<h1 class="mb-4 title p-3 d-flex justify-content-center" id="measurement">
							<i class="bi bi-rulers me-2"></i>Mensurations</h1>
					</div>
					<div class="row justify-content-center">
						<div class="shadow rounded col-md-8">
							{% include "component/_measurement_client.html.twig" %}
						</div>
					</div>
				</section>
				<section class="mb-5">
					<div class="row justify-content-center">
						<div class="tab-content mt-5 col-md-8" id="pills-tabContent">
							<div class="d-flex justify-content-center">
								<h1 class="mb-4 title p-3 d-flex justify-content-center" id="session">
									<i class="bi bi-check-all"></i>Séances</h1>
							</div>
							<ul class="nav nav-pills mb-3 " id="pills-tab" role="tablist">
								{% for session in client.sessions %}
									<li class="nav-item" role="presentation">
										<button class="nav-link {{ loop.first ? 'active' }} " id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-{{session.id}}" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Séance
											{{session.number}}</button>
									</li>
								{% endfor %}
							</ul>
							{% for session in client.sessions  %}
								<div class="tab-pane fade {{ loop.first ? 'show active' }}" id="pills-{{session.id}}" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
									<h3 class="text-center">
										Séance
										{{session.name}}</h3>
									<table class="table table-striped container fs-5 my-4 ">
										<thead class="border-bottom">
											<tr class="rounded-3 font-th">
												<th>Exercices</th>
												<th>Répetitions</th>
												<th>Repos</th>
											</tr>
										</thead>
										<tbody class="border-top-0">
											{% for exercise in session.exercises %}
												<tr class="font-td">
													<td class="border-top-0">{{exercise.name}}</td>
													<td class="border-top-0">{{exercise.repetition}}</td>
													<td class="border-top-0">{{exercise.duration}}min</td>
												</tr>
											{% endfor %}
											<tr>
												<td colspan="3">{% include "client/_comment_form.html.twig" %}</td>
											</tr>
										</tbody>
									</table>
								</div>
							{% endfor %}
						</div>
					</div>
				</section>
				<section class="mb-5">
					<div class="d-flex justify-content-center">
						<h1 class="mb-4 title p-3 d-flex justify-content-center" id="nutrition">
							<i class="bi bi-cup-straw"></i>Nutrition</h1>
					</div>
					<div class="row justify-content-center mb-5">
						<div class="col-md-8">
							<div class="d-flex">
								<p class="fs-5 me-2 objectif">Dépense énergétique:</p>
								<p class="fs-5">{{ client.energyExpenditure}}</p>
							</div>
							<div class="d-flex">
								<p class="fs-5 me-2 objectif">Hydratation journalière:</p>
								<p class="fs-5">{{ client.water}}</p>
							</div>
						</div>
						<div class="shadow rounded col-md-8">
							<table class="table table-hover">
								<thead>
									<tr class="font-td">
										<th>Repas</th>
										<th>Protéines</th>
										<th>Lipides</th>
										<th>Glucides</th>
									</tr>
								</thead>
								<tbody>
									{% for nutritionMeal in client.nutritionMeals %}
										<tr class="font-td">
											<td class="column">{{nutritionMeal.mealName}}</td>
											<td class="column">{{nutritionMeal.proteins}}
												g</td>
											<td class="column">{{nutritionMeal.lipids}}
												g</td>
											<td class="column">{{nutritionMeal.carbohydrate}}
												g</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</section>
			</div>
		</div>
	</main>
{% endblock %}
