{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	|| Objectif
{% endblock %}

{% block body %}
	<main class='container'>

		<h1 class="text-center m-5">Objectif</h1>
		<div class="d-flex">
			<a class='btn btn-primary my-4' href="{{ path('app_objectif_new') }}">
            <i class= "bi bi-plus-square me-2 align-items-center" ></i>
            Ajouter un objectif</a>
		</div>

		<table class="table my-3">
			<thead>
				<tr>
					<th>Objectif global</th>
					<th>Objectif de mois</th>
				</tr>
			</thead>
			<tbody>
				{% for objectif in objectifs %}
					<tr>
						<td>{{ objectif.globalName }}</td>
						<td>{{ objectif.weekName }}</td>
						<td class="d-flex justify-content-end">
							<a class="btn btn-primary d-flex justify-content-center" href="{{ path('app_objectif_edit', {'id': objectif.id}) }}">
                            <i class= "bi bi-pen me-2" ></i>
                            modifier
                            </a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>

{% endblock %}
