<section class="mb-5">
					<div class="mt-5 pt-4">
						<h2 id="session" class="mb-3 mt-5 pb-2 d-flex border-bottom border-primary border-1">
							<i class="bi bi-check-all me-3"></i>
							Séances et exercices
							<a href="{{ path('app_session_new', { 'id' : client.id }) }}" class="btn btn-outline-primary text-dark ms-5 mb-2 ">
								<i class="bi bi-plus-circle me-2"></i>Ajouter une séance
							</a>
						</h2>
					</div>
					{% for session in sessions %}
						<h4 class="mt-3 d-flex align-items-center justify-content-between">
							Séance
							{{session.number}}:
							{{ session.name }}
							<div class="d-flex">
								<a href="{{ path('app_session_edit', { 'id' : session.id }) }}" class="btn btn-sm btn-outline-secondary mx-2">
									<i class="bi bi-pen-fill me-2"></i>
									Modifier
								</a>
								{{ include('session/_delete_form.html.twig') }}
							</div>
						</h4>
						<div class="shadow-sm rounded">
							<table class="table table-hover">
								<thead class="m-5">
									<tr class="fs-5">
										<th>
											Nom de l'exercice
										</th>
										<th>
											Durée de repos
										</th>
										<th>
											Nombre de répétition
										</th>
									</tr>
								</thead>
								<tbody>
									{% for exercise in session.exercises %}
										<tr class="fs-5">
											<td class="mx-3 col-lg-4">
												{{ exercise.name }}
											</td>
											<td class="mx-3 col-lg-3">
												{{ exercise.duration }}
											</td>
											<td class="mx-3 col-lg-3">
												{{ exercise.repetition }}
											</td>

										</tr>
									{% endfor %}

								</tbody>
							</table>
						</div>
						<div class="mb-5">
							<p class="fs-5">Commentaire du client :
								{% if  session.comment  is empty %}
									Aucun commentaire
								{% else %}
									{{ session.comment }}
								{% endif %}
							</p>
						</div>
					{% endfor %}
				</section>