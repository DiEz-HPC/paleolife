{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	|| Objective
{% endblock %}

{% block body %}
	<main class='container'>

		<h1 class="text-center m-5">Objective</h1>
		<div class="d-flex">
			<a class='btn btn-primary my-4' href="{{ path('app_objective_new') }}">
            <i class= "bi bi-plus-square me-2 align-items-center" ></i>
            Ajouter un objective</a>
		</div>

		<table class="table my-3">
			<thead>
				<tr>
					<th>Objective global</th>
					<th>Objective de mois</th>
				</tr>
			</thead>
			<tbody>
				{% for objective in objectives %}
					<tr>
						<td>{{ objective.globalName }}</td>
						<td>{{ objective.monthName }}</td>
						<td class="d-flex justify-content-end">
							<a class="btn btn-primary d-flex justify-content-center" href="{{ path('app_objective_edit', {'id': objective.id}) }}">
                            <i class= "bi bi-pen me-2" ></i>
                            modifier
                            </a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>

{% endblock %}
