{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<h1 class="d-flex justify-content-center mt-5 mb-3">Se connecter</h1>
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<form action="{{ path('app_home') }}" method="post">
		<div class="container bg-light mt-auto">
			<div class="row">
				<div class="align-items-center col-lg-6 col-md-12 mt-3">
					<label for="username">E-mail</label>
					<input type="text" id="username" name="_username" value="{{ last_username }}"/>
				</div>
				<div class="align-items-center col-lg-6 col-md-12 mt-3">
					<label for="password">Mot de passe</label>
					<input type="password" id="password" name="_password"/>
				</div>
			</div>
			<div class="d-flex justify-content-center mt-2 mb-4">
				<button class="btn border bg-primary rounded m-3">{{ button_label|default('Se Connecter') }}</button>
			</div>
		</div>
	</form>
{% endblock %}
