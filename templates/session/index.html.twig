{% extends 'base.html.twig' %}

{% block title %}Admin séance
{% endblock %}

{% block body %}
	<main class="container mb-5">
		<h1 class="d-flex justify-content-center my-5">Séance</h1>
		<button class="btn btn-button bg-success mb-3">
			<a href="{{ path('app_session_new') }}" class="text-light text-decoration-none fs-5">
				<i class="bi bi-file-plus me-1 fs-5"></i>Ajouter</a>
		</button>
		<table class="table">
			<thead class="fs-4">
				<tr>
					<th>Nom</th>
					<th>Numéro</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody class="fs-5">
				{% for session in sessions %}
					<tr>
						<td>{{ session.name }}</td>
						<td>{{ session.number }}</td>
						<td>
							<a href="{{ path('app_session_show', {'id': session.id}) }}">show</a>
							<a href="{{ path('app_session_edit', {'id': session.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>
{% endblock %}
