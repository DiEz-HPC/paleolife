{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} || Service{% endblock %}

{% block body %}
<main class='container'>
    <h1 class='m-5 d-flex justify-content-center'>Mes services</h1>
    <div>
    <a class='btn btn-primary d-inline-flex justify-content-end' href="{{ path('app_service_new') }}"><i class="bi bi-plus-circle me-2"></i>Ajouter un service</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
            </tr>
        </thead>
        <tbody>
        
        {% for service in services %}
            <tr>
                <td>{{ service.title }}</td>
                <td class="d-flex justify-content-end">
                    <a class="btn btn-warning mx-3" href="{{ path('app_service_edit', {'id': service.id}) }}"><i class="bi bi-pen-fill me-2"></i>Modifier</a>
                    {{ include('service/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun service trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</main>    
{% endblock %}
