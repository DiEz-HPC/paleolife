{% extends 'layoutAdmin.html.twig' %}

{% block title %}
	{{ parent() }}
	|| Service
{% endblock %}

{% block body %}
	<main class="container">
		<h1 class="m-5 d-flex justify-content-center">Mes services</h1>
		<div>
			<a class="btn btn-primary d-inline-flex justify-content-end mb-2" href="{{ path('app_service_new') }}">
				<i class="bi bi-plus-circle me-2"></i>Ajouter un service</a>
		</div>
		<table class="table">
			<thead class="fs-4">
				<tr>
					<th>Titre</th>
				</tr>
			</thead>
			<tbody class="fs-5">

				{% for service in services %}
					<tr>
						<td>{{ service.title }}</td>
						<td class="d-flex justify-content-end">
							<a class="btn btn-warning mx-3" href="{{ path('app_service_edit', {'id': service.id}) }}">
								<i class="bi bi-pen-fill me-2"></i>Modifier</a>
							{{ include('service/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Aucun service trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<h1 class="m-5 d-flex justify-content-center">Mensuration</h1>
		<div>
			<a class="btn btn-primary d-inline-flex justify-content-end mb-2" href="{{ path('app_measurement_new') }}">
				<i class="bi bi-plus-circle me-2"></i>Ajouter une mensuration</a>
		</div>
		<table class="table">
			<thead class="fs-4">
				<tr>
					<th>Nom</th>
					<th>Unité</th>
				</tr>
			</thead>
			<tbody class="fs-5">
				{% for measurement in measurements %}
					<tr>
						<td>{{ measurement.name }}</td>
						<td>{{ measurement.unity }}</td>
						<td class="d-flex justify-content-end">
							<a class="btn btn-warning mx-3" href="{{ path('app_measurement_edit', {'id': measurement.id}) }}">
								<i class="bi bi-pen-fill me-2"></i>Modifier</a>
							{{ include('measurement/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Aucune mensuration trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>
{% endblock %}
